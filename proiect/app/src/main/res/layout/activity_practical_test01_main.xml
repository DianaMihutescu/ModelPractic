<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest01MainActivity">

    <Button
        android:id="@+id/changeActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="NAVIGATE TO SECOND ACTIVITY"
        />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/changeActivity"
        android:ems="7"
        android:gravity="center"
        android:text="0"
        android:saveEnabled="true"
        />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/changeActivity"
        android:ems="7"
        android:gravity="center"
        android:text="0"
        android:saveEnabled="true"
        />

    <Button
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editText1"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@id/editText1"
        android:ems="7"
        android:gravity="center"
        android:text="Press me"
        />

    <Button
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_below="@id/editText2"
        android:ems="7"
        android:gravity="center"
        android:text="Press me, too"
        />

    <Button
        android:id="@+id/service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/rightButton"
        android:layout_alignLeft="@+id/leftButton"
        android:layout_below="@id/rightButton"
        android:gravity="center"
        android:text="Start Service"
        />

</RelativeLayout>